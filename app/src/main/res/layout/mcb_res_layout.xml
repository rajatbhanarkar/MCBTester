<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/less_rounded_corners"
    android:padding="9dp"
    android:id="@+id/rlmrlmain">

    <ImageView
        android:id="@+id/ivmrlicon"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/testerman"
        android:padding="10dp"
        android:background="@drawable/less_rounded_corners" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_65sdp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvmrlmcbname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/dmsans"
            android:textSize="@dimen/_13sdp"
            android:text="MCB 1"/>

        <TextView
            android:id="@+id/tvmrltestres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/dmsans"
            android:layout_marginTop="5dp"
            android:textSize="@dimen/_12sdp"
            android:text="R   3   SC1   120   PASS"/>
    </LinearLayout>

</RelativeLayout>